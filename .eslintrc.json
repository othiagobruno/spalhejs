{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "use": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": ["error", {"endOfLine":"auto"}],
    "class-methods-use-this": "off",
    "no-param-reassign": "off",
    "camelcase": "off",
    "global-require": "off",
    "no-console": "off",
    "consistent-return": "off",
    "no-multi-assign": "off",
    //temporary errors
    "no-restricted-syntax": "off",
    "guard-for-in": "off",
    "no-shadow": "off",
    "no-await-in-loop": "off"
  }
}
